<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunicationApp.UI.Main"
        x:Class="CommunicationApp.UI.Main.View"
        mc:Ignorable="d" Title="{Binding WindowInfo.Title, Mode=OneWay}">

    <Window.Width>1365</Window.Width>
    <Window.Height>750</Window.Height>


    <Window.WindowStyle>
        None
    </Window.WindowStyle>
    <!--변경시 INI도 변경해주어야함-->
    <Window.MaxWidth>
        4096
    </Window.MaxWidth>
    <Window.MinWidth>
        800
    </Window.MinWidth>
    <Window.MinHeight>
        480
    </Window.MinHeight>
    <Window.MaxHeight>
        2160
    </Window.MaxHeight>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" Grid.Row="1">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
